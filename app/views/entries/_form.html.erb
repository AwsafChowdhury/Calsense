<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div class="notification is-danger">
      <p class="subtitle is-6"><strong><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</strong></p>
      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :meal_type, class: "label" %>
    <div class="control">
      <%= form.text_field :meal_type, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :calories, class: "label" %>
    <div class="control">
      <%= form.number_field :calories, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :carbohydrates, class: "label" %>
    <div class="control">
      <%= form.number_field :carbohydrates, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :proteins, class: "label" %>
    <div class="control">
      <%= form.number_field :proteins, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :fats, class: "label" %>
    <div class="control">
      <%= form.number_field :fats, class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit "Submit", class: "button is-primary" %>
    </div>
  </div>
<% end %>
