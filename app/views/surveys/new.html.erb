<h1 class="title is-3">Your Details can help improve our app</h1>
<%= form_with(model: @survey, url: surveys_path, html: { class: "form" }) do |form| %>
  <div class="field">
    <%= form.label :age, class: "label" %>
    <div class="control">
      <%= form.text_field :age, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :weight, "Weight (in kgs)", class: "label" %>
    <div class="control">
      <%= form.number_field :weight, placeholder: "Enter weight in kgs", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :height, "Height (in meters)", class: "label" %>
    <div class="control">
      <%= form.number_field :height, placeholder: "Enter height in meters", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :gender, class: "label" %>
    <div class="control">
      <%= form.select :gender, ['Male', 'Female', 'Other'], {}, class: "select" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit "Submit Survey", class: "button is-primary" %>
    </div>
  </div>
<% end %>
