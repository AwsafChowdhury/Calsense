<h1>New Recipe</h1>

<%= form_with(model: @recipe) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Recipe.categories.keys.map { |key| [key.humanize, key] } %>
  </div>

  <div class="field">
    <%= form.label :meal_category %>
    <%= form.select :meal_category, Recipe.meal_categories.keys.map { |key| [key.humanize, key] } %>
  </div>

  <div class="field">
    <%= form.label :instructions %>
    <%= form.text_area :instructions %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Recipe' %>
  </div>
<% end %>

<%= link_to 'Back', recipes_path %>
