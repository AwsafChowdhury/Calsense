<h1 class="title is-3">All Recipes</h1>

<div class="table-container">
  <table class="table is-fullwidth is-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Meal Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= link_to recipe.name, recipe %></td>
          <td><%= recipe.category %></td>
          <td><%= recipe.meal_category %></td>
          <td>
            <%= link_to 'Show', recipe, class: 'button is-info is-small' %>
            <%= link_to 'Edit', edit_recipe_path(recipe), class: 'button is-warning is-small' %>
            <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger is-small' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Recipe', new_recipe_path, class: 'button is-success' %>
